<% layout("/layouts/boilerplate") %>
<div class="mt-3">
    <form method="get" action="/<%= course._id %>/<%=rubric._id%>/scores" class="m-0">
        <button class="btn btn-outline-dark">‚Üê Back to Course</button>
    </form>
    <br>
    <h3>Dashboard - <%= course.courseCode %> <%= course.description %></h3>
</div>

<% Object.entries(averageTeamScores).forEach(([criteria, teamData], index) => { 
    const labels = Object.keys(teamData);
    const data = Object.values(teamData);
    const chartId = `chart-${index}`;
%>
    <div class="mb-5">
        <h5><%= criteria %></h5>
        <canvas id="<%= chartId %>"></canvas>
    </div>

    <script>
    const ctx = document.getElementById('<%= chartId %>').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: <%- JSON.stringify(labels) %>,
            datasets: [{
                label: '<%= criteria %>',
                data: <%- JSON.stringify(data) %>,
                backgroundColor: 'rgba(54, 162, 235, 0.7)'
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    max: 5
                }
            }
        }
    });
</script>

<% }); %>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
