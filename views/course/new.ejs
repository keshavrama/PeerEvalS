    <script>
        function addInstructors() {
        const instructorContainer = document.getElementById("instructors");
        const newInstructor = document.createElement("div");
        newInstructor.innerHTML = `
        <h3>Instructors</h3>
        <div class = "mb-3">
            <label for = "no" class = "form-label">No:</label>
            <input type="number" name="instructors[][no]" placeholder="Enter No" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for = "role" class = "form-label">Role:</label>
            <input type="text" name="instructors[][role]" placeholder="Enter Role" class="form-control" required>
            <div class="invalid-feedback">Please enter the Role</div>
        </div>
        <div class="mb-3">
            <label for = "name" class = "form-label">Name:</label>
            <input type="text" name="instructors[][name]" placeholder="Enter Name" class="form-control" required>
            <div class="invalid-feedback">Please enter the Name</div>
        </div>
        <div class="mb-3">
            <label for = "email" class = "form-label">Email:</label>
            <input type="email" name="instructors[][email]" placeholder="Enter Email" class="form-control" required>
        </div>
    `;
    instructorContainer.appendChild(newInstructor);
        }

        function addStudents() {
        const studentContainer = document.getElementById("students");
        const newStudent = document.createElement("div");
        newStudent.innerHTML = `
        <h3>Students</h3>
        <div class = "mb-3">
            <label for = "no" class = "form-label">No:</label>
            <input type="number" name="students[][no]" placeholder="Enter No" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for = "role" class = "form-label">Role:</label>
            <input type="text" name="students[][role]" placeholder="Enter Role" class="form-control" required>
            <div class="invalid-feedback">Please enter the Role</div>
        </div>
        <div class="mb-3">
            <label for = "name" class = "form-label">Name:</label>
            <input type="text" name="students[][name]" placeholder="Enter Name" class="form-control" required>
            <div class="invalid-feedback">Please enter the Name</div>
        </div>
        <div class="mb-3">
            <label for = "email" class = "form-label">Email:</label>
            <input type="email" name="students[][email]" placeholder="Enter Email" class="form-control" required>
        </div>
    `;
    studentContainer.appendChild(newStudent);
}
    </script>
</head>
<body>
    <%- include("../includes/navbar.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Add a new Course</h3>
            <form method = "POST" action = "/courses" class = "needs-validation" novalidate>
                <div class="mb-3">
                    <label for = "description" class = "form-label">Description:</label>
                    <textarea name = "description" placeholder = "Enter Description" type = "text" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter Course Name</div>
                </div>
                <div class="mb-3">
                    <label for = "courseCode" class = "form-label">Course Code:</label>
                    <input name = "courseCode" placeholder = "Enter Course Code" type = "text" class="form-control" required>
                    <div class="invalid-feedback">Please enter Course Code</div>
                </div>
                <div class="mb-3">
                    <label for = "courseId" class = "form-label">Course Id:</label>
                    <input name = "courseId" placeholder = "Enter Course ID" type = "text" class="form-control" required>
                    <div class="invalid-feedback">Please enter Course ID</div>
                </div>

            <div id="instructors">
                <h3>Instructors</h3>
                <div class = "mb-3">
                    <label for = "no" class = "form-label">No:</label>
                    <input type="number" name="instructors[][no]" placeholder="Enter No" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for = "role" class = "form-label">Role:</label>
                    <input type="text" name="instructors[][role]" placeholder="Enter Role" class="form-control" required>
                    <div class="invalid-feedback">Please enter the Role</div>
                </div>
                <div class="mb-3">
                    <label for = "name" class = "form-label">Name:</label>
                    <input type="text" name="instructors[][name]" placeholder="Enter Name" class="form-control" required>
                    <div class="invalid-feedback">Please enter the Name</div>
                </div>
                <div class="mb-3">
                    <label for = "email" class = "form-label">Email:</label>
                    <input type="email" name="instructors[][email]" placeholder="Enter Email" class="form-control" required>
                </div>
                <!-- No: <input type="number" name="instructors[][no]" placeholder="Enter No" required>
                <br><br>
                Role: <input type="text" name="instructors[][role]" placeholder="Enter Role" required>
                <br><br> -->
                <!-- Name: <input type="text" name="instructors[][name]" placeholder="Enter Name" required>
                <br><br>
                Email: <input type="email" name="instructors[][email]" placeholder="Enter Email" required>
                <br><br> -->
            </div>
        <button class = "btn btn-dark mt-3" type="button" onclick="addInstructors()">Add More Instructors</button>
        <br><br>

        <div id="students">
            <h3>Students</h3>
            <div class = "mb-3">
                <label for = "no" class = "form-label">No:</label>
                <input type="number" name="students[][no]" placeholder="Enter No" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for = "role" class = "form-label">Role:</label>
                <input type="text" name="students[][role]" placeholder="Enter Role" class="form-control" required>
                <div class="invalid-feedback">Please enter the Role</div>
            </div>
            <div class="mb-3">
                <label for = "name" class = "form-label">Name:</label>
                <input type="text" name="students[][name]" placeholder="Enter Name" class="form-control" required>
                <div class="invalid-feedback">Please enter the Name</div>
            </div>
            <div class="mb-3">
                <label for = "email" class = "form-label">Email:</label>
                <input type="email" name="students[][email]" placeholder="Enter Email" class="form-control" required>
            </div>
