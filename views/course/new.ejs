<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PeerEvalS - Add Course</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200..800&display=swap" rel="stylesheet">
</head>
<body>
    <%- include("../includes/navbar.ejs") %>
    <div class="container mt-4">
        <div class="col-lg-8 mx-auto">
            <h3 class="mb-4">Add a New Course</h3>
            <form method="POST" action="/courses" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-label">Description:</label>
                    <textarea name="description" placeholder="Enter Description" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter the Course Description.</div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Course Code:</label>
                    <input name="courseCode" placeholder="Enter Course Code" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter the Course Code.</div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Course ID:</label>
                    <input name="courseId" placeholder="Enter Course ID" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter the Course ID.</div>
                </div>

                <h4>Instructors</h4>
                <div id="instructors">
                    <div class="instructor-entry">
                        <div class="mb-3">
                            <label class="form-label">Name:</label>
                            <input type="text" name="instructors[][name]" placeholder="Enter Name" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email:</label>
                            <input type="email" name="instructors[][email]" placeholder="Enter Email" class="form-control" required>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-dark mt-2" onclick="addInstructors()">Add More Instructors</button>

                <h4 class="mt-4">Students</h4>
                <div id="students">
                    <div class="student-entry">
                        <div class="mb-3">
                            <label class="form-label">Name:</label>
                            <input type="text" name="students[][name]" placeholder="Enter Name" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email:</label>
                            <input type="email" name="students[][email]" placeholder="Enter Email" class="form-control" required>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-dark mt-2" onclick="addStudents()">Add More Students</button>
                <br>
                <button class="btn btn-success mt-4" type="submit">Add Course</button>
            </form>
        </div>
    </div>

    <%- include("../includes/footer.ejs") %>
    
    <script>
        function addInstructors() {
            const container = document.getElementById("instructors");
            const index = container.children.length; // Get the current index
    
            const div = document.createElement("div");
            div.classList.add("instructor-entry");
            div.innerHTML = `
                <div class="mb-3">
                    <label class="form-label">Name:</label>
                    <input type="text" name="instructors[${index}][name]" placeholder="Enter Name" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email:</label>
                    <input type="email" name="instructors[${index}][email]" placeholder="Enter Email" class="form-control" required>
                </div>
            `;
            container.appendChild(div);
        }
    
        function addStudents() {
            const container = document.getElementById("students");
            const index = container.children.length; // Get the current index
    
            const div = document.createElement("div");
            div.classList.add("student-entry");
            div.innerHTML = `
                <div class="mb-3">
                    <label class="form-label">Name:</label>
                    <input type="text" name="students[${index}][name]" placeholder="Enter Name" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email:</label>
                    <input type="email" name="students[${index}][email]" placeholder="Enter Email" class="form-control" required>
                </div>
            `;
            container.appendChild(div);
        }
    </script>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/JS/script.js"></script>
</body>
</html>
